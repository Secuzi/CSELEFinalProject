<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilomenoMauiMidterm.Views.ProfileView"
             Title="ProfileView">
    <ContentPage.Resources>
        <Style x:Key="PrimaryTextStyle" TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="InterSemiBold" />
            <Setter Property="FontSize" Value="15" />
        </Style>
        <Style x:Key="SecondaryTextStyle" TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontFamily" Value="Inter" />
            <Setter Property="FontSize" Value="10" />
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <ScrollView Padding="10">
            <Frame Margin="5"
                   HeightRequest="200"
                   WidthRequest="340"
                   BackgroundColor="#33373E"
                   CornerRadius="25">
                <Grid RowDefinitions=".15*,*"
                      ColumnDefinitions="*,*"
                      Padding="10, 0">
                    <Image Source="back"
                           WidthRequest="20"
                           VerticalOptions="Start"
                           HorizontalOptions="Start"/>
                    <Image Source="back"
                           Grid.Column="1" 
                           WidthRequest="20"
                           VerticalOptions="Start"
                           HorizontalOptions="End"/>
                    <Grid Grid.Row="1"
                          Grid.ColumnSpan="2"
                          ColumnDefinitions=".3*,*"
                          ColumnSpacing="10"
                          RowDefinitions="*,*">
                        <Image Source="dotnet_bot"
                               WidthRequest="70"
                               VerticalOptions="Center"
                               Grid.RowSpan="2"/>
                        <Grid Grid.Column="1"
                              ColumnDefinitions=".7*,.15*,.15*"
                              RowDefinitions=".6*, .4*">
                            <Label Text="Arturo Gallardo"
                               Style="{StaticResource PrimaryTextStyle}"
                                   VerticalOptions="End"/>
                            <Label Text="@_gallardo03"
                                   Grid.Row="1"
                                   Style="{StaticResource SecondaryTextStyle}"
                                   VerticalOptions="Start"/>
                            <Image Source="add_user"
                                   Grid.Column="1"
                                   Grid.RowSpan="2"
                                   WidthRequest="20"/>
                            <Image Source="messages"
                                   Grid.Column="2"
                                   Grid.RowSpan="2"
                                   WidthRequest="20" />
                        </Grid>
                        <Grid Grid.Row="1"
                              Grid.Column="1"
                              ColumnDefinitions="*,*,*"
                              RowDefinitions="*,*">
                            <Label Text="2"
                                   Style="{StaticResource PrimaryTextStyle}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
                            <Label Text="Posts"
                                   Grid.Row="1"
                                   Style="{StaticResource SecondaryTextStyle}"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Center"/>
                            <Label Text="2"
                                   Grid.Column="1"
                                   Style="{StaticResource PrimaryTextStyle}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
                            <Label Text="Posts"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Style="{StaticResource SecondaryTextStyle}"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Center"/>
                            <Label Text="2"
                                   Grid.Column="2"                                   
                                   Style="{StaticResource PrimaryTextStyle}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
                            <Label Text="Posts"
                                   Grid.Row="1"
                                   Grid.Column="2"                                  
                                   Style="{StaticResource SecondaryTextStyle}"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Center"/>

                        </Grid>

                    </Grid>
                </Grid>
            </Frame>
            
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>