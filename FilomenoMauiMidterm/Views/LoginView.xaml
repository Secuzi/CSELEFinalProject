<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FilomenoMauiMidterm.Views.LoginView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#21222A"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Style x:Key="PrimaryTextStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#61DAFB" />
            <Setter Property="FontFamily" Value="Inter" />
        </Style>
        <Style x:Key="PrimaryTextStyleWithShadow" TargetType="Label">
            <Setter Property="TextColor" Value="#61DAFB" />
            <Setter Property="FontFamily" Value="Inter" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow
                        Brush="Black"
                        Opacity="0.8"
                        Radius="100"
                        Offset="0,5" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <Grid>
        <FlexLayout
            AlignItems="Center"
            BackgroundColor="#21222A"
            JustifyContent="Center">
            <Border
                BackgroundColor="#33373E"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 8"
                WidthRequest="310">
                <VerticalStackLayout Padding="18,13,18,18">



                    <Label
                        Margin="0,0,0,28"
                        FontFamily="InterBold"
                        FontSize="30"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource PrimaryTextStyleWithShadow}"
                        Text="Login" />






                    <VerticalStackLayout Margin="0,0,0,14">
                        <Label
                            FontFamily="InterSemiBold"
                            FontSize="16"
                            Style="{StaticResource PrimaryTextStyleWithShadow}"
                            Text="Username" />

                        <Border
                            Padding="12,4,12,4"
                            BackgroundColor="#4D515762"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 8">
                            <Border.Shadow>
                                <Shadow
                                    Brush="Black"
                                    Opacity="0.25"
                                    Radius="4"
                                    Offset="0,4" />
                            </Border.Shadow>

                            <Entry Opacity="1" TextColor="White" />
                        </Border>
                    </VerticalStackLayout>
                    <VerticalStackLayout Margin="0,0,0,24">
                        <Label
                            FontFamily="InterSemiBold"
                            FontSize="16"
                            Style="{StaticResource PrimaryTextStyleWithShadow}"
                            Text="Password" />
                        <Border
                            Padding="12,4,12,4"
                            BackgroundColor="#4D515762"
                            Stroke="Transparent"
                            StrokeShape="RoundRectangle 8">
                            <Border.Shadow>
                                <Shadow
                                    Brush="Black"
                                    Opacity="0.25"
                                    Radius="4"
                                    Offset="0,4" />
                            </Border.Shadow>
                            <Entry Opacity="1" TextColor="White" />
                        </Border>

                    </VerticalStackLayout>

                    <Button Text="Sign in" />
                    <HorizontalStackLayout>
                        <Label Text="Don't have an account? " />
                        <Label Text="Register" />

                    </HorizontalStackLayout>

                </VerticalStackLayout>


            </Border>

        </FlexLayout>



    </Grid>
</ContentPage>