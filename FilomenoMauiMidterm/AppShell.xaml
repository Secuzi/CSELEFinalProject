<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FilomenoMauiMidterm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FilomenoMauiMidterm"
    xmlns:tabs="clr-namespace:FilomenoMauiMidterm.Views.Tabs"
    xmlns:views="clr-namespace:FilomenoMauiMidterm.Views"
    Title="FilomenoMauiMidterm"
    BackgroundColor="#0E0E0E"
    FlyoutBackgroundColor="#0E0E0E"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#33373E"
    Shell.TabBarForegroundColor="#29EAEB"
    Shell.TabBarTitleColor="#29EAEB">
    <TabBar>
        <Tab Title="Home" Icon="home_icon.png">
            <ShellContent ContentTemplate="{DataTemplate tabs:HomeView}" Route="home" />
        </Tab>
        <Tab Title="Add Post" Icon="add.png">
            <ShellContent ContentTemplate="{DataTemplate tabs:PostView}" Route="post" />
        </Tab>
        <Tab Title="Search" Icon="search_icon.png">
            <ShellContent ContentTemplate="{DataTemplate tabs:SearchView}" Route="search" />
        </Tab>
    </TabBar>

</Shell>
